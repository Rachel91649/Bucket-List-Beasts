.bg-slideshow {
	padding-top: 100px;
	list-style: none;
	z-index: 1;
}
.bg-slideshow li span {
	width: 100%;
	height: 100%;
	position: absolute;
	padding-top: 5em;
	top: 15em;
	left: 0px;
	color: transparent;
	background-size: cover;
	background-position: 50% 50%;
	background-repeat: none;
	opacity: 0;
	z-index: 0;
	-webkit-backface-visibility: hidden;
	-webkit-animation: imageAnimation 24s linear infinite 0s;
	-moz-animation: imageAnimation 24s linear infinite 0s;
	animation: imageAnimation 24s linear infinite 0s;
}
.bg-slideshow li:nth-child(1) span {
	background-image: url(<%= asset_path 'capadocia-image.jpeg' %>);
	animation-delay: 0.5s;
}
.bg-slideshow li:nth-child(2) span {
	background-image: url(<%= asset_path 'surf-image.jpeg' %>);
	animation-delay: 5s;
}
.bg-slideshow li:nth-child(3) span {
	background-image: url(<%= asset_path 'norway-yoga.jpeg' %>);
	animation-delay: 10.5s;
}
.bg-slideshow li:nth-child(4) span {
	background-image: url(<%= asset_path'lake-image.jpeg' %>);
	animation-delay: 15s;
}
.bg-slideshow li:nth-child(5) span {
	background-image: url(<%= asset_path 'newyork-image.jpeg' %>);
	animation-delay: 20.5s;
}
.bg-slideshow li:nth-child(6) span {
	background-image: url(<%= asset_path'blacksandbeach-image.jpeg' %>);
	animation-delay: 25s;
}

